{
	"compilerOptions": {
		"target": "ES2021",
		"module": "CommonJS",
		"declaration": true,
		"declarationMap": true,
		"allowJs": false,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"alwaysStrict": true,
		"allowUnreachableCode": false,
		"strictBindCallApply": true,
		"noImplicitThis": true,
		"noImplicitOverride": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"preserveConstEnums": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"sourceMap": true,
		"inlineSourceMap": false,
		"inlineSources": false,
		"moduleDetection": "force",
		"lib": [
			"ES2021",
			"dom",
		],
		"types": [
			"node",
			"jest",
		],
		"paths": {
			"@redts/*": [
				"src/*"
			],
		}
	},
	"include": [
		"src/**/*.ts",
		"tools/**/*.js",
	],
	"exclude": [
		"**.test.ts",
		"jest.config.js",
	]
}
