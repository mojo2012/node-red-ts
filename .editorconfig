# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.scss]
tab_width = 2
indent_style = space

[*.html]
tab_width = 2
indent_style = space

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.python]
max_line_length = off
indent_style = tab
trim_trailing_whitespace = true

[*.yml]
max_line_length = off
indent_style = tab
trim_trailing_whitespace = true
tab_width = 2
indent_style = space

